<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_begin="80dp"
        android:orientation="horizontal"
        android:id="@+id/guide"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="300dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide"
        android:id="@+id/grid">

        <View
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ml"
            android:background="@mipmap/cross"
            app:layout_constraintVertical_chainStyle="packed"
            android:id="@+id/tl"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <View
            android:layout_margin="10dp"
            android:id="@+id/tm"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toRightOf="@id/tl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tr"
            app:layout_constraintBottom_toTopOf="@id/mm"
            android:background="@mipmap/cross"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <View
            android:layout_margin="10dp"
            android:id="@+id/tr"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toRightOf="@id/tm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/mr"
            android:background="@mipmap/cross"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <View
            android:layout_margin="10dp"
            android:id="@+id/ml"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/tl"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/mm"
            app:layout_constraintBottom_toTopOf="@id/bl"
            android:background="@mipmap/cross"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <View
            android:layout_margin="10dp"
            android:id="@+id/mm"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toRightOf="@id/ml"
            app:layout_constraintTop_toBottomOf="@id/tm"
            app:layout_constraintRight_toLeftOf="@id/mr"
            app:layout_constraintBottom_toTopOf="@id/bm"
            android:background="@mipmap/cross"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <View
            android:layout_margin="10dp"
            android:id="@+id/mr"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toRightOf="@+id/mm"
            app:layout_constraintTop_toBottomOf="@id/tr"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/br"
            android:background="@mipmap/cross"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <View
            android:layout_margin="10dp"
            android:id="@+id/bl"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/ml"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/bm"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@mipmap/cross"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <View
            android:layout_margin="10dp"
            android:id="@+id/bm"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toRightOf="@id/bl"
            app:layout_constraintTop_toBottomOf="@id/mm"
            app:layout_constraintRight_toLeftOf="@id/br"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@mipmap/cross"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <View
            android:layout_margin="10dp"
            android:id="@+id/br"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/mr"
            app:layout_constraintLeft_toRightOf="@id/bm"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@mipmap/cross"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>